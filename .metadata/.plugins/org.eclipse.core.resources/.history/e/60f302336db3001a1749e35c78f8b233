                    </tr>
                    
               
                <%} %>
            </table>
        <button class="btn" onclick="showEnrollView()">등록</button>
        <button class="btn" onclick="deletePayment()">삭제</button>
        <button class="btn" onclick="updatePayment()">수정</button>
